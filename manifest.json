{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple Chrome extension example",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ]
  }
  